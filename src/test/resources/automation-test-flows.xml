<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:x-road="http://www.mulesoft.org/schema/mule/x-road" xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:spring="http://www.springframework.org/schema/beans" version="EE-3.6.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
http://www.mulesoft.org/schema/mule/x-road http://www.mulesoft.org/schema/mule/x-road/current/mule-x-road.xsd"
>

<context:property-placeholder location="automation-credentials.properties" />

<x-road:config username="${x-road.username}" password="${x-road.password}" name="X-road" doc:name="X-road"></x-road:config>

<flow name="send-message" doc:name="SendMessage">
	<x-road:send-message config-ref="X-road"/>
</flow>


</mule>
